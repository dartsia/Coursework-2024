<!-- Schedule Section -->
<section class="page-section" id="schedule">
  <div class="container">
    <h2 class="text-center mt-0">Розклад чергувань</h2>
    <hr class="divider my-4">
    <div class="table-responsive">
      <a class="btn btn-primary my-2" href="/generate-schedule">Згенеруваи новий розклад</a>
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Дата</th>
            <th scope="col">Тип</th>
            <th scope="col">Ім'я</th>
          </tr>
        </thead>
        <tbody>
          {{#each soldiers as |soldier index|}}
          <tr>
            <th scope="row">{{soldier.id}}</th>
            <td>{{soldier.date}}</td>
            <td>{{soldier.type}}</td>
            <td>{{soldier.soldier_name}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>